
{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2017",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"]
  },
  "include": ["src/seeds/**/*.ts", "src/entities/**/*.ts", "src/data-source.ts"],
  "exclude": ["node_modules"]
}
